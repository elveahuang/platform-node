{
    "name": "root",
    "private": true,
    "version": "0.0.1",
    "workspaces": [
        "api",
        "cms",
        "builder",
        "site"
    ],
    "scripts": {
        "start:api": "npm run dev --workspace=api",
        "start:api:dev": "npm run start:dev --workspace=api",
        "start:api:pro": "npm run start:pro --workspace=api",
        "build:api": "npm run build:api:pro",
        "build:api:dev": "npm run build:dev --workspace=api",
        "build:api:pro": "npm run build:pro --workspace=api",
        "start:cms:dev": "npm run start:dev --workspace=cms",
        "start:cms:pro": "npm run start:pro --workspace=cms",
        "start:cms:git": "npm run start:git --workspace=cms",
        "build:cms:dev": "npm run build:dev --workspace=cms",
        "build:cms:pro": "npm run build:pro --workspace=cms",
        "build:cms:git": "npm run build:git --workspace=cms",
        "start:builder:dev": "npm run start:dev --workspace=builder",
        "start:builder:pro": "npm run start:pro --workspace=builder",
        "start:builder:git": "npm run start:git --workspace=builder",
        "build:builder:dev": "npm run build:dev --workspace=builder",
        "build:builder:pro": "npm run build:pro --workspace=builder",
        "build:builder:git": "npm run build:git --workspace=builder",
        "start:site:dev": "npm run start:dev --workspace=site",
        "start:site:pro": "npm run start:pro --workspace=site",
        "start:site:git": "npm run start:git --workspace=site",
        "build:site:dev": "npm run build:dev --workspace=site",
        "build:site:pro": "npm run build:pro --workspace=site",
        "build:site:git": "npm run build:git --workspace=site",
        "lint:api": "npm run lint --workspace=api",
        "lint:cms": "npm run lint --workspace=cms",
        "lint:builder": "npm run lint --workspace=builder",
        "lint": "npm run lint:api && npm run lint:cms && npm run lint:builder",
        "prettier": "prettier --write './**/*.{ts,tsx,js,jsx,json,scss,css,vue,html}'",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.3.2",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "prettier": "^2.8.8",
        "typescript": "^5.1.6"
    }
}
